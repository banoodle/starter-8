{
    "name": "kanopi/starter8",
    "description": "Project template for Drupal 8 projects with composer and docksal",
    "type": "project",
    "license": "GPL-2.0+",
    "authors": [
        {
            "name": "Sean Dietrich <sean@kanopistudios.com>",
            "role": "Developer / Architect"
        }
    ],
    "repositories": [
        {
            "type": "composer",
            "url": "https://packages.drupal.org/8"
        },
        {
            "type": "composer",
            "url": "https://asset-packagist.org"
        }
    ],
    "require": {
        "composer/installers": "^1.2",
        "cweagans/composer-patches": "^1",
        "drupal-composer/drupal-scaffold": "^2",
        "drupal/config_direct_save": "^1.0",
        "drupal/config_provider": "^2",
        "drupal/config_readonly": "^1",
        "drupal/config_sync": "^2",
        "drupal/console": "^1",
        "drupal/core": "^8",
        "drush/drush": "^9",
        "oomphinc/composer-installers-extender": "^1.1",
        "webflo/drupal-finder": "^1.0.0",
        "webmozart/path-util": "^2.3",
        "zaporylie/composer-drupal-optimizations": "^1"
    },
    "require-dev": {
        "behat/mink": "~1.7",
        "behat/mink-goutte-driver": "~1.2",
        "drupal/drupal-extension": "^3.1",
        "drush-ops/behat-drush-endpoint": "^0.0.4",
        "jcalderonzumba/gastonjs": "^1.0.2",
        "jcalderonzumba/mink-phantomjs-driver": "^0.3.1",
        "mikey179/vfsstream": "^1.2",
        "pantheon-systems/quicksilver-pushback": "~1",
        "phpunit/phpunit": "^4.8",
        "symfony/css-selector": "^2.8"
    },
    "conflict": {
        "drupal/drupal": "*"
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "config": {
      "optimize-autoloader": true,
      "preferred-install": "dist",
      "sort-packages": true
    },
    "autoload": {
        "classmap": [
            "scripts/composer/ScriptHandler.php"
        ]
    },
    "scripts": {
        "build-assets": [
          "composer install --optimize-autoloader"
        ],
        "lint": "find web/modules/custom web/themes/custom -name '*.php' -exec php -l {} \\;",
        "code-sniff": "echo 'No code sniff step defined.'",
        "unit-test": "echo 'No unit test step defined.'",
        "drupal-scaffold": "DrupalComposer\\DrupalScaffold\\Plugin::scaffold",
        "pre-install-cmd": [
            "DrupalProject\\composer\\ScriptHandler::checkComposerVersion"
        ],
        "pre-update-cmd": [
            "DrupalProject\\composer\\ScriptHandler::checkComposerVersion"
        ],
        "post-update-cmd": [
            "DrupalProject\\composer\\ScriptHandler::createRequiredFiles"
        ],
        "post-install-cmd": [
            "@drupal-scaffold",
            "DrupalProject\\composer\\ScriptHandler::createRequiredFiles"
        ],
        "post-create-project-cmd": [
            "@drupal-scaffold",
            "DrupalProject\\composer\\ScriptHandler::createRequiredFiles"
        ]
    },
    "extra": {
        "enable-patching": true,
        "installer-types": ["library", "drupal-library", "npm-asset", "bower-asset"],
        "patches": {

        },
        "installer-paths": {
            "web/core": ["type:drupal-core"],
            "web/libraries/{$name}": [
              "type:drupal-library",
              "type:bower-asset",
              "type:npm-asset"
            ],
            "web/modules/contrib/{$name}": ["type:drupal-module"],
            "web/profiles/contrib/{$name}": ["type:drupal-profile"],
            "web/themes/contrib/{$name}": ["type:drupal-theme"],
            "drush/contrib/{$name}": ["type:drupal-drush"]
        },
        "drupal-scaffold": {
          "source": "https://cgit.drupalcode.org/drupal/plain/{path}?h={version}",
          "excludes": [
            ".csslintrc",
            ".editorconfig",
            ".eslintignore",
            ".eslintrc.json",
            ".ht.router.php",
            "web.config"
          ],
          "initial": {
            ".htaccess": ".htaccess",
            "robots.txt": "robots.txt",
            "sites/default/default.settings.php": "sites/default/settings.php",
            "sites/default/default.services.yml": "sites/default/services.yml"
          }
        }
    }
}
